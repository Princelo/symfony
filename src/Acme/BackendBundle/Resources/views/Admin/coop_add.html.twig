{% extends 'AcmeBackendBundle:Default:layout.html.twig' %}
{% block body %}
    <ol class="breadcrumb">
        <li><a href="#"><span class="glyphicon glyphicon-home"></span></a></li>
        <li class="">基础设置</li>
        <li class="active">合作伙伴</li>
    </ol>
    <div class="col-lg-12">
        <h1 class="page-header">增加合作伙伴</h1>
    </div>

<style>
    .form-control{height:100%; min-height: 34px;}
    .form-control.color{margin-top:3px; margin-bottom:3px; border:1px solid #30a5ff;}
    .myalert.mybg-warning{background: #ffb53e;max-height: 30px !important; margin:0 !important;
        color:#fff;line-height:30px !important; cursor: normal; padding:0px 12px;}
</style>
{% for m in message %}
    {{ m }}
{% endfor %}
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">增加合作伙伴</div>
            <div class="panel-body" id="pre-vote-list">
                {{ form_start(form) }}
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>缩略图</label>
                            {{ form_widget(form.strThumb,  {'attr': {'novalidate': 'novalidate', 'class': 'form-control'}}) }}
                            <span class="form_errors">{{ form_errors(form.strThumb) }}</span>
                        </div>
                        <div class="form-group">
                            <label>标题</label>
                            {{ form_widget(form.strTitle,  {'attr': {'novalidate': 'novalidate', 'class': 'form-control'}}) }}
                            <span class="form_errors">{{ form_errors(form.strThumb) }}</span>
                        </div>
                        <div class="form-group">
                            <label>链接</label>
                            {{ form_widget(form.strLink,  {'attr': {'novalidate': 'novalidate', 'class': 'form-control'}}) }}
                            <span class="form_errors">{{ form_errors(form.strLink) }}</span>
                        </div>
                        <div class="form-group">
                            <label>排序权重(越大越前)</label>
                            {{ form_widget(form.intWeight,  {'attr': {'novalidate': 'novalidate', 'class': 'form-control'}}) }}
                            <span class="form_errors">{{ form_errors(form.intWeight) }}</span>
                        </div>
                        <div class="form-group">
                            {{ form_widget(form.提交, {attr: {'class': 'btn btn-primary pull-right'}}) }}
                        </div>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
