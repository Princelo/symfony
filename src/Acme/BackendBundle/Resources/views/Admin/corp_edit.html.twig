{% extends 'AcmeBackendBundle:Default:layout.html.twig' %}
{% block body %}
    <ol class="breadcrumb">
        <li><a href="#"><span class="glyphicon glyphicon-home"></span></a></li>
        <li class="">首页</li>
        <li class="active">资料修改</li>
    </ol>
    <div class="col-lg-12">
        <h1 class="page-header">资料修改</h1>
    </div>
    <style>
        .form-control{height:100%; min-height: 34px;}
        .form-control.color{margin-top:3px; margin-bottom:3px; border:1px solid #30a5ff;}
        .myalert.mybg-warning{background: #ffb53e;max-height: 30px !important; margin:0 !important;
            color:#fff;line-height:30px !important; cursor: normal; padding:0px 12px;}
        li{list-style: none;}
    </style>
    {% for m in message %}
        {{ m }}
    {% endfor %}
    {{ form_start(form) }}
    <div class="col-lg-12">
    <div class="panel panel-default">
    <div class="panel-heading">资料修改</div>
    <div class="panel-body" id="pre-vote-list">
    <div class="main-partition">
    <div class="registration-form fm_step_two">
    <div class="col-md-12">
        <div class="form-group col-md-6">
            {{ form_label(form.boolIsValid) }}
            {{ form_widget(form.boolIsValid, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label>公司LOGO</label>
            {{ form_widget(form.strLogo,  {'attr': {'novalidate': 'novalidate', 'class': 'form-control'}}) }}
            <span class="form_errors">{{ form_errors(form.strLogo) }}</span>
        </div>
        <div class="form-group">
            {{ form_label(form.strFullName) }}
            {{ form_widget(form.strFullName,  {'attr': {'novalidate': 'novalidate', 'class': 'form-control'}}) }}
            <span class="form_errors">{{ form_errors(form.strFullName) }}</span>
        </div>
        <div class="form-group">
            {{ form_label(form.strShortName) }}
            <div class="myalert mybg-warning btn pull-right">
                <span class="glyphicon glyphicon-warning-sign"></span>
                必填
            </div>
            {{ form_widget(form.strShortName,  {'attr': {'novalidate': 'novalidate', 'class': 'form-control'}}) }}
            <span class="form_errors">{{ form_errors(form.strShortName) }}</span>
        </div>
        <div class="form-group">
            <label>公司地址</label>
            <div class="myalert mybg-warning btn pull-right">
                <span class="glyphicon glyphicon-warning-sign"></span>
                必填
            </div>
            <div class="form-control">
                {{ form_widget(form.intProvinceId, {'attr': {'class': 'form-control'}}) }}
                {{ form_widget(form.intCityId, {'attr': {'class': 'form-control'}}) }}
                {{ form_widget(form.strAddressInfo, {'attr': {'class': 'form-control'}}) }}
            </div>
            <span class="form_errors">{{ form_errors(form.intProvinceId) }} {{ form_errors(form.intCityId) }} {{ form_errors(form.strAddressInfo) }}</span>
        </div>
        <div class="form-group">
            {{ form_label(form.strZipCode) }}
            {{ form_widget(form.strZipCode,  {'attr': {'novalidate': 'novalidate', 'class': 'form-control'}}) }}
            <span class="form_errors">{{ form_errors(form.strZipCode) }}</span>
        </div>
        <div class="form-group">
            {{ form_label(form.strTel) }}
            <div class="myalert mybg-warning btn pull-right">
                <span class="glyphicon glyphicon-warning-sign"></span>
                必填
            </div>
            {{ form_widget(form.strTel,  {'attr': {'novalidate': 'novalidate', 'class': 'form-control'}}) }}
            <span class="form_errors">{{ form_errors(form.strTel) }}</span>
        </div>
        <div class="form-group">
            {{ form_label(form.strIntro) }}
            {{ form_widget(form.strIntro,  {'attr': {'novalidate': 'novalidate', 'class': 'form-control'}}) }}
            <span class="form_errors">{{ form_errors(form.strIntro) }}</span>
        </div>
        <div class="form-group">
            <label>旗下艺人</label>
            <ul class="tags" data-prototype="{% if form.arrStrArtistName.vars.prototype is defined %}
                                    {{ form_widget(form.arrStrArtistName.vars.prototype.name)|e }}
                                    {% endif %}">
                {# iterate over each existing tag and render its only field: name #}
                {% for tag in form.arrStrArtistName %}
                    {% if loop.index == 1 %}
                        <li>{{ form_widget(tag.name,  { 'attr': {'data-validate' : 'required', 'class': 'form-control'} }) }}</li>
                    {% else %}
                        <li>{{ form_widget(tag.name, {'attr': {'class': 'form-control'}}) }}</li>
                    {% endif %}
                {% endfor %}
            </ul>
        </div>
    </div>
    <div class="col-md-6">
    <div class="form-group">
        {{ form_label(form.strUserName) }}
        {{ form_widget(form.strUserName, {'attr': {'class': 'form-control'}}) }}
        <span class="form_errors">{{ form_errors(form.strUserName) }}</span>
    </div>
    <div class="form-group">
        {{ form_label(form.strUserNickName) }}
        <div class="myalert mybg-warning btn pull-right">
            <span class="glyphicon glyphicon-warning-sign"></span>
            必填
        </div>
        {{ form_widget(form.strUserNickName, {'attr': {'class': 'form-control'}}) }}
        <span class="form_errors">{{ form_errors(form.strUserNickName) }}</span>
    </div>
    <div class="form-group">
        {{ form_label(form.intUserGender) }}
        <div class="myalert mybg-warning btn pull-right">
            <span class="glyphicon glyphicon-warning-sign"></span>
            必填
        </div>
        {{ form_widget(form.intUserGender, {'attr': {'class': 'form-control'}}) }}
        <span class="form_errors">{{ form_errors(form.intUserGender) }}</span>
    </div>
    <div class="form-group">
        {{ form_label(form.strUserCitizenId) }}
        {{ form_widget(form.strUserCitizenId, {'attr': {'class': 'form-control'}}) }}
        <span class="form_errors">{{ form_errors(form.strUserCitizenId) }}</span>
    </div>
    <div class="form-group">
        {{ form_label(form.strUserMobile) }}
        <div class="myalert mybg-warning btn pull-right">
            <span class="glyphicon glyphicon-warning-sign"></span>
            必填
        </div>
        {{ form_widget(form.strUserMobile, {'attr': {'class': 'form-control'}}) }}
        <span class="form_errors">{{ form_errors(form.strUserMobile) }}</span>
    </div>
    <div class="form-group">
        {{ form_label(form.strUserTel) }}
        {{ form_widget(form.strUserTel, {'attr': {'class': 'form-control'}}) }}
        <span class="form_errors">{{ form_errors(form.strUserTel) }}</span>
    </div>
    <div class="form-group">
        {{ form_label(form.strUserQQ) }}
        {{ form_widget(form.strUserQQ, {'attr': {'class': 'form-control'}}) }}
        <span class="form_errors">{{ form_errors(form.strUserQQ) }}</span>
    </div>
    <div class="form-group">
    {{ form_widget(form.完成, {attr: {'class': 'btn btn-primary pull-right'}}) }}
    </div>
    </div>
    </div>
    </div>
    </div>
    </div>
    </div>
    {{ form_end(form) }}
{% endblock %}
