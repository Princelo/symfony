{% extends 'AcmeBackendBundle:Default:layout.html.twig' %}
{% block body %}
<ol class="breadcrumb">
    <li><a href="#"><span class="glyphicon glyphicon-home"></span></a></li>
    <li class="">基础设置</li>
    <li class="active">网站信息</li>
</ol>
<div class="col-lg-12">
    <h1 class="page-header">网站信息</h1>
</div>
<style>
    .form-control{height:100%; min-height: 34px;}
    .form-control.color{margin-top:3px; margin-bottom:3px; border:1px solid #30a5ff;}
    .myalert.mybg-warning{background: #ffb53e;max-height: 30px !important; margin:0 !important;
        color:#fff;line-height:30px !important; cursor: normal; padding:0px 12px;}
</style>
{% for m in message %}
    {{ m }}
{% endfor %}
<div class="col-lg-12">
    <div class="panel panel-default">
        <div class="panel-heading">网站信息</div>
        <div class="panel-body" id="">
    {{ form_start(form) }}
            <div class="form-group col-md-6">
                {{ form_label(form.strSiteTitle) }}
                {{ form_widget(form.strSiteTitle, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group col-md-6">
                {{ form_label(form.strSiteSubTitle) }}
                {{ form_widget(form.strSiteSubTitle, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group col-md-6">
                {{ form_label(form.strFootInfo) }}
                {{ form_widget(form.strFootInfo, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group col-md-6">
                {{ form_label(form.strTopImg) }}
                {{ form_widget(form.strTopImg, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group col-md-6">
                {{ form_label(form.strADImg1) }}
                {{ form_widget(form.strADImg1, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group col-md-6">
                {{ form_label(form.strADLink1) }}
                {{ form_widget(form.strADLink1, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group col-md-6">
                {{ form_label(form.strADImg2) }}
                {{ form_widget(form.strADImg2, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group col-md-6">
                {{ form_label(form.strADLink2) }}
                {{ form_widget(form.strADLink2, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group col-md-6">
                {{ form_widget(form.提交, {'attr': {'class': 'btn btn-primary'}}) }}
            </div>
    {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
