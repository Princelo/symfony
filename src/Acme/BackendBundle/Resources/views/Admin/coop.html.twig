{% extends 'AcmeBackendBundle:Default:layout.html.twig' %}
{% block body %}
    <ol class="breadcrumb">
        <li><a href="#"><span class="glyphicon glyphicon-home"></span></a></li>
        <li class="">首页</li>
        <li class="active">合作伙伴</li>
    </ol>
    <div class="col-lg-12">
        <h1 class="page-header">合作伙伴</h1>
    </div>
    <style>
        .form-control{height:100%; min-height: 34px;}
        .form-control.color{margin-top:3px; margin-bottom:3px; border:1px solid #30a5ff;}
        .myalert.mybg-warning{background: #ffb53e;max-height: 30px !important; margin:0 !important;
            color:#fff;line-height:30px !important; cursor: normal; padding:0px 12px;}
    </style>
    {% for m in message %}
        {{ m }}
    {% endfor %}
    <div class="col-lg-12">
    <div class="panel panel-default">
    <div class="panel-heading">合作伙伴</div>
    <div class="panel-body" id="pre-vote-list">
    <div class="main-partition">
    <table class="table table-striped">
        <tr>
        </tr>
        {% for f in coops %}
            <tr {% if loop.index is odd %}class="color"{% endif %}>
                <td>{{ f.id }}</td>
                <td>{{ f.strTitle }}</td>
                <td>{{ f.strLink }}</td>
                <td><img style="height:50px;" src="{{ app.url }}/uploads/coop/{{ f.strThumb }}"/></td>
                <td style="display: none;">
                    <a href="{# path('_admin_flash_edit', {'id': f.id} ) #}" class="">编辑</a>
                </td>
                <td>
                    <a href="{{ path('_admin_coop_delete', {'id': f.id}) }}" class="btn btn-danger">刪除</a>
                </td>
            </tr>
        {% endfor %}
    </table>
    <a href="{{ path('_admin_coop_add') }}">增加合作伙伴</a>
    </div></div></div></div>
{% endblock %}