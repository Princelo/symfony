{% extends 'AcmeBackendBundle:Default:layout.html.twig' %}
{% block body %}
    <ol class="breadcrumb">
        <li><a href="#"><span class="glyphicon glyphicon-home"></span></a></li>
        <li class="">帐号管理</li>
        <li class="active">修改密码</li>
    </ol>
    <div class="col-lg-12">
        <h1 class="page-header">修改密码</h1>
    </div>

<div class="col-lg-12">
    <div class="panel panel-default">
        <div class="panel-heading">修改密码</div>
        <div class="panel-body" id="pre-vote-list">
    <form action="{{ path('_unvadmin_password_edit') }}" method="post" >
        <div class="col-md-6">
            <div class="form-group">
                <label>新密码</label>
                <input name="password" data-validate="required" type="password" class="form-control"/>
            </div>
            <div class="form-group">
                <label>确认新密码</label>
                <input name="password_repeat" data-validate="required" type="password" class="form-control"/>
            </div>
            <input type="submit" class="btn btn-danger" value="确认更改密码"/>
        </div>
    </form>
            </div>
        </div>
    </div>
{% endblock %}
