{% extends 'AcmeFrontendBundle:Default:base.html.twig' %}

{% block body %}
    <div class="main-partition">
        <div class="left">
            <div class="article-detail">
                <h1>
                    {{ article.strTitle }}
                </h1>
                <label>
                    {{ article.timeCreateTime|date('Y-m-d') }}
                </label>
                <div class="content">
                    {{ article.textContent|raw }}
                </div>
                <!-- JiaThis Button BEGIN -->
                <div class="jiathis-block jiathis_style_32x32">
                    <a class="jiathis_button_qzone"></a>
                    <a class="jiathis_button_tsina"></a>
                    <a class="jiathis_button_tqq"></a>
                    <a class="jiathis_button_weixin"></a>
                    <a class="jiathis_button_renren"></a>
                    <a href="http://www.jiathis.com/share" class="jiathis jiathis_txt jtico jtico_jiathis" target="_blank"></a>
                    <a class="jiathis_counter_style"></a>
                </div>
                <script type="text/javascript" src="http://v3.jiathis.com/code/jia.js" charset="utf-8"></script>
                <!-- JiaThis Button END -->
            </div>
        </div>
        <div class="right">
            <div class="star_news">
                <ul>
                    {% for a in star_news %}
                    <li>
                    <span class="index">{{ loop.index }}</span>
                    <a href="{{ path('article_detail', {"id": a.id}) }}">
                        {{ a.title }}
                    </a>
                    </li>
                    {% endfor %}
                </ul>
            </div>
            <div class="hot_pic">
                <ul>
                    {% for a in hot_pics %}
                        <li>
                            <a href="{{ path('article_detail', {"id": a.id}) }}">
                                <img src="uploads/article_thumb/{{ a.thumb }}" />
                            </a>
                            <a href="{{ path('article_detail', {"id": a.id}) }}">
                                {{ a.title }}
                            </a>
                        </li>
                    {% endfor %}
                </ul>
            </div>
            <div class="hot_news">
                <ul>
                    {% for a in hot_news_b %}
                        <li>
                            <span class="index">{{ loop.index }}</span>
                            <a href="{{ path('article_detail', {"id": a.id}) }}">
                                {{ a.title }}
                            </a>
                        </li>
                    {% endfor %}
                    {% for a in hot_news_a %}
                        <li>
                            <span class="index">{{ loop.index }}</span>
                            <a href="{{ path('article_detail', {"id": a.id}) }}">
                                {{ a.title }}
                            </a>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    <div style="clear:both"></div>
{% endblock %}