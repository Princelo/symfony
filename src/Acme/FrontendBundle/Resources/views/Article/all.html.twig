{% extends 'AcmeFrontendBundle:Default:base.html.twig' %}

{% block body %}
    <div class="main-partition">
    <div class="left article">
        <div class="juno_box">
            <div class="juno_box_type">
                <a href="{{ path('_article_list', {"category_id": "1"}) }}" id="industry-list-type" onmouseover="display('industry-list');" class="juno_box_a_current">行业咨询</a>
                <a href="{{ path('_article_list', {"category_id": "2"}) }}" id="entertainment-list-type" onmouseover="display('entertainment-list');" class="juno_box_a_notcurrent">娱乐快报</a>
            </div>
            <script>
                function display(category_id){
                    $("#industry-list").hide();
                    $("#entertainment-list").hide();
                    $("#"+category_id).show();
                    $(".juno_box_type a").removeClass('juno_box_a_current');
                    $(".juno_box_type a").addClass('juno_box_a_not_current');
                    $("#"+category_id+"-type").addClass('juno_box_a_current');
                }
            </script>
            <div id="industry-list">
                {% for a in hot_news_a %}
                    <ul class="juno_box_ul">
                        <li class="juno_box_title">
                            <h2><a href="{{ path('_article_detail', {"id": a.id}) }}">{{ a.title }}</a></h2>
                        </li>
                        <li class="juno_box_content">
                            <div class="juno_box_img">
                                <img src="{{ app.url }}/uploads/article_thumb/{{ a.thumb }}" />
                            </div>
                            <div class="juno_box_cont">
                                {{ a.summary }}
                                <a href="{{ path('_article_detail', {"id": a.id}) }}">[详细]</a>
                            </div>
                        </li>
                        <li class="juno_box_time">{{ time_diff(a.time) }}</li>
                    </ul>
                {% endfor %}
            </div>
            <div id="entertainment-list" style="display: none;">
                {% for a in hot_news_b %}
                    <ul class="juno_box_ul">
                        <li class="juno_box_title">
                            <h2><a href="{{ path('_article_detail', {"id": a.id}) }}">{{ a.title }}</a></h2>
                        </li>
                        <li class="juno_box_content">
                            <div class="juno_box_img">
                                <img src="{{ app.url }}/uploads/article_thumb/{{ a.thumb }}" />
                            </div>
                            <div class="juno_box_cont">
                                {{ a.summary }}
                                <a href="{{ path('_article_detail', {"id": a.id}) }}">[详细]</a>
                            </div>
                        </li>
                        <li class="juno_box_time">{{ time_diff(a.time) }}</li>
                    </ul>
                {% endfor %}
            </div>
        </div>
    </div>
    <div class="right article">
        <div class="article-block star_news">
            <div class="category-title"><a href="">每日星闻榜</a></div>
            <ul>
                {% for a in star_news %}
                    <li>
                        <a href="{{ path('_article_detail', {"id": a.id}) }}">
                            {{ a.title }}
                        </a>
                        <span>{{ time_diff(a.time) }}</span>
                    </li>
                {% endfor %}
            </ul>
        </div>
        <div class="article-list img pic-block hot_pic">
            <div class="nav-content">
                <span class="tag current"><a href="{{ path('_article_img_list', {"category_id": "4"}) }}">热点图片</a></span>
            </div>
            <ul>
                {% for a in hot_pics %}
                    <li>
                        <a href="{{ path('_article_detail', {"id": a.id}) }}">
                            <img src="{{ app.url }}/uploads/article_thumb/{{ a.thumb }}" />
                        </a>
                        <br>
                        <a class="title" href="{{ path('_article_detail', {"id": a.id}) }}">
                            {{ a.title }}
                        </a>
                        <span class="time">
                        {{ time_diff(a.time) }}
                        </span>
                    </li>
                {% endfor %}
                <div style="clear:both"></div>
            </ul>
        </div>
        <div class="article-list img pic-block start_interview">
            <div class="nav-content">
                <span class="tag current"><a href="{{ path('_article_img_list', {"category_id": "4"}) }}">明星访谈</a></span>
            </div>
            <ul>
                {% for a in star_interviews %}
                    <li>
                        <a href="{{ path('_article_detail', {"id": a.id}) }}">
                            <img src="{{ app.url }}/uploads/article_thumb/{{ a.thumb }}" />
                        </a>
                        <br>
                        <a class="title" href="{{ path('_article_detail', {"id": a.id}) }}">
                            {{ a.title }}
                        </a>
                        <span class="time">
                        {{ time_diff(a.time) }}
                        </span>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>
    <div style="clear:both"></div>
{% endblock %}